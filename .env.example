# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
DB_PORT=5432
DB_NAME=epicoin_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=true

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API Configuration
API_PORT=3000
API_HOST=localhost
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Payment Providers
PROVIDER_API_KEY=your_provider_api_key
PROVIDER_API_SECRET=your_provider_api_secret
PROVIDER_WEBHOOK_SECRET=your_webhook_secret
PROVIDER_BASE_URL=https://api.provider.com/

# Stripe Configuration
STRIPE_SECRET_KEY=....
STRIPE_PUBLISHABLE_KEY=....
STRIPE_WEBHOOK_SECRET=whsec_...
APP_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Transaction Settings
DEFAULT_CURRENCY=EPIC
MIN_TRANSACTION_AMOUNT=0.01
MAX_TRANSACTION_AMOUNT=10000.00
DEFAULT_COMMISSION_RATE=0.001

# Trust Score Settings
INITIAL_TRUST_SCORE=50.00
MIN_TRUST_SCORE_FOR_TRANSACTION=20.00
TRUST_SCORE_DECAY_DAYS=30
